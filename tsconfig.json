{
    "compilerOptions": {
        "alwaysStrict": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ES2015",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "target": "ES5",
        "lib": ["ES2018", "DOM"],
        "baseUrl": "."
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}